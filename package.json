{
  "name": "node-ts-typeorm-api",
  "version": "1.0.0",
  "description": "API Node + TypeScript + Express, MVC, TypeORM (Postgres), DataSource singleton, dotenv, cors, nodemon.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts,js --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "typeorm": "node --require ts-node/register node_modules/typeorm/cli.js -d src/config/data-source.ts"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "brazilian-values": "^0.13.1",
    "class-validator": "^0.14.2",
    "class-validator-br": "^0.0.5",
    "class-validator-cpf": "^1.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25",
    "validation-br": "^1.5.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/node": "^22.17.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rigorodrigo/API.git"
  }
}
